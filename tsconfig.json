{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@component/*": ["./src/component/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@pages/*": ["./src/pages/*"],
      "@store/*": ["./src/store/*"],
      "@ui/*": ["./src/ui/*"],
      "@shared/*": ["./src/shared/*"],
      "@assets/*": ["./src/assets/*"]
    }
  },
  "include": [
    "src",
    "deprecated/templateEn.ts",
    "deprecated/templateEnLastVerFooter.ts",
    "deprecated/templateEnWithFooter.ts",
    "deprecated/templateEnWithNewFooterV2.ts",
    "deprecated/templateEnWithNoFooter.ts",
    "deprecated/templateEsWithNoFooter.ts",
    "deprecated/templateEnWithLegalInfoOnly.ts",
    "deprecated/templateNewFooter.ts",
    "deprecated/templatePtWithNoFooter.ts",
    "deprecated/templateWithHtml.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
